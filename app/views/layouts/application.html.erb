<html>
  <head>
    <title>Book Hub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div>
    <% if logged_in? %>
    You are logged in as <%= current_user.username%>!
      <% end %>
     <p><%= flash[:message] %></p>

  </div>
  <%= yield %>
</body>
</html>
