<h1>Login</h1>

<%= render 'layouts/errors', {object: @user} %>

<%= form_for(@user, url: 'login') do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br />
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %><br>
    <%= f.submit "Login" %>
  
  <% end %>
