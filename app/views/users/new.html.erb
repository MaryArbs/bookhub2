<h1>Sign Up to Join Book Hub </h1>

<%= render 'layouts/errors', {object: @user} %>

<%= form_for(@user, url: '/signup') do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br />
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= f.submit "Sign Up" %>
  
  <% end %>

  
