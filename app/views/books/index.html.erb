<div class='container text-center'>
<h2 class='display-4'>All Books:</h2>
<h3><%= @books.count %> book(s)!</h3>

<ul class="list-group">
<% @books.each do |book| %>
<li class="list-group-item"> Title: <%= link_to book.title, book_path(book.id), class: 'text-info'  %><br> by: <%= book.author.name %></li>
 <% end %>
</ul>
</div>

<div class='container text-center'>
<h2 class='display-6'>Search by Author:</h2>
  <%= form_tag(books_path, method: "get") do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag "Search" %>
  <% end %><br>
</div>





